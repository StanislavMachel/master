@model Razor.Models.Product

@{
    ViewBag.Title = "DemoExpression";
    Layout = "~/Views/_BasicLayout.cshtml";
}

<table>
    <thead>
        <tr><th>Property</th><th>Value</th></tr>
    </thead>
    <tbody>
        <tr><td>Name</td><td>@Model.Name</td></tr>
        <tr><td>Price</td><td>@Model.Price</td></tr>
        <tr>
            <td>In stock</td>
            <td>
                @switch ((int)ViewBag.ProductCount)
                {
                    case 0:
                        @:Not available
                        break;
                    case 1:
                        <b>Only a few left (@ViewBag.ProductCount)</b>
                        break;
                    default:
                        @ViewBag.ProductCount
                        break;
                }

                @*@if (ViewBag.ProductCount == 0)
                {
                    @:Not available
                }
                else if (ViewBag.ProductCount == 1)
                {
                    <b>Only a few left (@ViewBag.ProductCount)</b>
                }
                else
                {
                    @ViewBag.ProductCount
                }*@
            </td>
        </tr>
    </tbody>
</table>

<div data-discount="@ViewBag.ApplyDiscount" data-express="@ViewBag.ExpressShip"
     data-suplier="@ViewBag.Supplier">
    Container with data-attributes
</div>

Discount: <input type="checkbox" checked="@ViewBag.ApplyDiscount" />
Fast shipping: <input type="checkbox" checked="@ViewBag.ExpressShip" />
Shipping: <input type="checkbox" checked="@ViewBag.Supplier" />